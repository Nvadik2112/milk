    footer
     div.footer_block
      div.footer_block-item
       img(src='image/feed.svg')
       p Feeds
      div.footer_block-item
       img(src='image/gallery.svg')
       p Gallery
      div.footer_block-item
       img(src='image/deats.svg')
       p Deals
      div.footer_block-item
       img(src='image/notify.svg')
       p Notify
      div.footer_block-item
       img(src='image/profile.svg')
       p Profile
    div.filter
     div.filter_container
      div.filter_top
       h2 Filter
       img.close_icon(src='image/close.svg')
      div.filter_buttons
       h3 Price ( $ )
       div.filter_buttons-bar
        button.button_item 0-200
        button.button_item 200-400
        button.button_item 400-600
        button.button_item More
      div.filter_range
       div.filter_range-title
        h3#range_value 0   
        h3 - 1000000 $
       input.filter_range-item(type="range", min="0", max="1000000", step="1", value="50000")
      div.filter_buttons
       h3 Shape
       div.filter_buttons-bar
        button.button_item Circle
        button.button_item Square
        button.button_item Rectangle
        button.button_item Triangle 
      div.filter_buttons
       h3 Size (Width/Height)
       div.filter_buttons-bar
        button.button_item 0-200
        button.button_item 200-400
        button.button_item 400-600
        button.button_item More
       div.filter_buttons-bar.buttons-height
        button.button_item 0-200
        button.button_item 200-400
        button.button_item 400-600
        button.button_item More
     div.filter_apply
      p Apply
    script(src="index.js")