  head
    meta(charset="utf-8")
    title= "Проект Milk"
    link(href="style/style.css" rel='stylesheet')
  body
    header
     div.header_bar
      div.header_bar-logo
       img(src='image/ibuy_logo.svg')
      div.header_bar-buttons
       button.button_item Top
       button.button_item Painters
       button.button_item Design
       button.button_item Tags  
     div.header_bar
      div.header_bar-search
       input(type="search", name="Search", placeholder="Search")
      div.header_bar-menu
       img(src='image/menu_logo.svg')
    main
     img(src='image/image1.svg')
